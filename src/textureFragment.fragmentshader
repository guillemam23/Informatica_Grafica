#version 330 core

//Input data
in vec3 ourColor;
in vec2 TextCoord;

// Ouput data
//out vec3 color;

out vec4 color;
out vec2 textCoord;

uniform sampler2D ourTexture;

void main()
{

	// Output color = red 
	//color = vec3(1,0,0);
      color = texture(ourTexture, TextCoord);

}

